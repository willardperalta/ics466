<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiptActivity">


    <Button
        android:id="@+id/done"
        android:layout_width="96dp"
        android:layout_height="69dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:background="@color/secondary"
        android:fontFamily="@font/voltaire"
        android:onClick="launchCombinedActivity"
        android:text="Next: Add Prices"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addItem"
        app:layout_constraintVertical_bias="0.962" />

    <ImageView
        android:id="@+id/displayPicture"
        android:layout_width="279dp"
        android:layout_height="389dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/voltaire"
        android:text="Receipt Reference Picture"
        android:textColor="#ffffff"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/takePictureButton"
        android:layout_width="71dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_main_color_button"
        android:text="Take Picture"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayPicture" />

    <Button
        android:id="@+id/albumButton"
        android:layout_width="129dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_main_color_button"
        android:text="Choose from camera roll"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/takePictureButton" />


</androidx.constraintlayout.widget.ConstraintLayout>