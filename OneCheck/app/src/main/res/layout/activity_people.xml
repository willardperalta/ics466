<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".People">


    <TextView
        android:id="@+id/textView"
        android:layout_width="161dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="89dp"
        android:text="People"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="82dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="620dp"
        android:onClick="launchPeopleAndItemsActivity"
        android:text="Assign Items"
       />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/people"
        android:layout_width="175dp"
        android:layout_height="236dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="233dp"
        android:layout_marginEnd="202dp"
        android:layout_marginRight="202dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="114dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:text="Add+ Contacts" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="291dp"
        android:layout_marginLeft="291dp"
        android:layout_marginTop="542dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="44dp"
        android:onClick="launchListViewActivity"
        android:text="Activity to test Recycler view" />
</RelativeLayout>