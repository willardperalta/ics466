<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="231dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/voltaire"
        android:gravity="center"
        android:text="Final Results"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultsnames"
        android:layout_width="364dp"
        android:layout_height="305dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/white"
        android:fontFamily="@font/voltaire" />

    <Button
        android:id="@+id/back"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="192dp"
        android:background="@drawable/rounded_main_color_button"
        android:fontFamily="@font/voltaire"
        android:onClick="goBackToPeopleAndItems"
        android:text="Edit"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="188dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@color/secondary"
        android:fontFamily="@font/voltaire"
        android:text="Done"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/othertextview"
        android:layout_width="133dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="126dp"
        android:textSize="18dp"
        android:text="Tax and tip added to each person:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/distributedtaxandtip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="249dp"
        android:layout_marginRight="249dp"
        android:layout_marginBottom="123dp"
        android:text="$0.00"
        android:textColor="@color/white"
        android:textSize="18dp" />
</RelativeLayout>