<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckHistory">


    <TextView
        android:id="@+id/payed"
        android:layout_width="398dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_secondary_color_button"
        android:fontFamily="@font/voltaire"
        android:gravity="center"
        android:text="View receipts where people owe me: "
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/debt"
        android:layout_width="374dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="348dp"
        android:background="@drawable/rounded_secondary_color_button"
        android:fontFamily="@font/voltaire"
        android:gravity="center"
        android:text="View receipts where I owe people:"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="101dp"
        android:layout_height="107dp"
        android:layout_marginTop="28dp"
        android:onClick="launchPeopleOweMeActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payed"
        app:srcCompat="@drawable/receipt_cartoon2" />

    <ImageView
        android:id="@+id/imageViewEmpty"
        android:layout_width="101dp"
        android:layout_height="107dp"
        android:layout_marginTop="28dp"
        android:onClick="launchPeopleOweMe2Activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payed"
        app:srcCompat="@drawable/receipt_cartoon2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="101dp"
        android:layout_height="107dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="36dp"
        android:onClick="launchIOwePeopleActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/debt"
        app:srcCompat="@drawable/receipt_cartoon2" />


    <Button
        android:id="@+id/doneButton"
        android:layout_width="115dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@color/secondary"
        android:fontFamily="@font/voltaire"
        android:text="Back"
        android:onClick="launchMainActivity"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent" />

